<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/testol</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">admin</property>
        <mapping resource="com/iscream/entity/Event.hbm.xml"/>
        <mapping resource="com/iscream/entity/Eventinfo.hbm.xml"/>
        <mapping resource="com/iscream/entity/Manager.hbm.xml"/>
        <mapping resource="com/iscream/entity/Question.hbm.xml"/>
        <mapping resource="com/iscream/entity/Questioninfo.hbm.xml"/>
        <mapping resource="com/iscream/entity/Report.hbm.xml"/>
        <mapping resource="com/iscream/entity/Reportinfo.hbm.xml"/>
        <mapping resource="com/iscream/entity/Student.hbm.xml"/>
        <mapping resource="com/iscream/entity/Teacher.hbm.xml"/>
        <mapping resource="com/iscream/entity/Test.hbm.xml"/>
        <mapping resource="com/iscream/entity/Testcard.hbm.xml"/>
        <mapping resource="com/iscream/entity/Testcardinfo.hbm.xml"/>
        <mapping resource="com/iscream/entity/Testinfo.hbm.xml"/>
        <mapping resource="com/iscream/entity/Ttoq.hbm.xml"/>
        <mapping resource="com/iscream/entity/Ttoqinfo.hbm.xml"/>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>